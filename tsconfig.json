{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@interfaces": ["src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@lobby": ["src/services/LobbyService"],
      "@lobby/*": ["src/services/LobbyService/*"],
      "@level": ["src/services/LevelService"],
      "@level/*": ["src/services/LevelService/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"]
    }
  },
}
